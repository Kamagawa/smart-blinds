<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <SwitchPreference
        android:defaultValue="@bool/pref_auto_open_default_value"
        android:key="@string/pref_key_auto_open"
        android:title="@string/pref_title_auto_open" />

    <smartblindscontrol.f_jiang.github.com.smartblindscontrol.TimePreference
        android:key="@string/pref_key_auto_open_time"
        android:title="@string/pref_title_auto_open_time"
        />

    <SwitchPreference
        android:defaultValue="@bool/pref_auto_close_default_value"
        android:key="@string/pref_key_auto_close"
        android:title="@string/pref_title_auto_close" />

    <smartblindscontrol.f_jiang.github.com.smartblindscontrol.TimePreference
        android:key="@string/pref_key_auto_close_time"
        android:title="@string/pref_title_auto_close_time"
        />

    <com.pavelsikun.seekbarpreference.SeekBarPreference
        android:defaultValue="@integer/pref_blinds_position_default_value"
        android:key="@string/pref_key_blinds_position"
        android:title="@string/pref_title_blinds_position"
        app:msbp_minValue="@integer/pref_blinds_position_min_value"
        app:msbp_maxValue="@integer/pref_blinds_position_max_value"
        />
</PreferenceScreen>
